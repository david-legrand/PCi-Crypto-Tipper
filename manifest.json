{
    "manifest_version": 2,
    "name": "NXi Crypto Tipper",
    "version": "0.0.2.1",
    "author": "LEGRAND David",
	"description": "Extension permettant de rajouter des boutons de 'Tip' Twitter via Bitcoin / Dogecoin Ã  Next INpact et son forum",
	"icons": { "16": "img/logo-16.png",
           "48": "img/logo-48.png",
          "64": "img/logo-64.png",
		  "128": "img/logo-128.png",
		  "256": "img/logo-256.png"},
    "permissions": [
        "tabs",
        "webRequest",
        "http://*.nextinpact.com/"
    ],
    "content_scripts": [
        {
            "matches": ["http://www.nextinpact.com/news/*", "http://www.nextinpact.com/breve/*", "http://www.nextinpact.com/blog/*", "http://forum.nextinpact.com/topic/*"],
            "js": ["cs.js"],
            "css": ["cs.css"],
            "run_at": "document_end"
        }
    ],
    "background": {
        "scripts": ["background.js"]
    },
    "web_accessible_resources": ["img/bitcoin.png", "img/dogecoin.png"]
}
